<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.Views.NewUserView"
             Title="NewUserView">
    <VerticalStackLayout>
        <Label Text="Welcome to Password Manager!" FontSize="24" HorizontalOptions="Center" Margin="70"/>

        <Border Stroke="Gray" StrokeThickness="1" Padding="30" WidthRequest="500">
            <VerticalStackLayout Spacing="10">

                <Label x:Name="ErrorMessageLabel" Text="Placeholder for error message" IsVisible="true" TextColor="Red" HorizontalOptions="Center" />
                <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
                <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
                <Entry x:Name="UsernameEntry" Placeholder="Username" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

              

                <Button Text="Create Account" Clicked="Button_Clicked"/>



            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>